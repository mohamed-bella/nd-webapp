<%- include('../partials/head.ejs') %>
<%- include('../partials/navbar.ejs') %>
<main>
     <div class="flex justify-center items-center min-h-screen">
          <div class="w-full max-w-md">
              <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
                   
                   <!-- Create Account Form -->
                   <form id="register-form" action="/register" method="POST" data-parsley-validate>
                       <h2 id="fo rm-title" class="text-2xl font-bold text-center mb-6">Create Account</h2>
                        <!-- error message -->
                        <% if (errorMessage) { %>
                            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
                                <strong class="font-bold">Error:</strong>
                                <span class="block sm:inline"><%= errorMessage %></span>
                            </div>
                        <% } %>
                      <div class="mb-4">
                          <label class="block text-gray-700 text-sm font-bold mb-2" for="fullname" data-parsley-length="[3, 20]" data-parsley-trigger="keyup">
                              Fullname
                          </label>
                          <input class="input input-bordered w-full" id="fullname" type="text" name="fullname" placeholder="Enter Your Fullname" required>
                      </div>
      
                      <div class="mb-4">
                          <label class="block text-gray-700 text-sm font-bold mb-2" for="email" data-parsley-type="email" data-parsley-trigger="keyup">
                              Email
                          </label>
                          <input class="input input-bordered w-full" id="email" type="email" name="email" placeholder="Enter your email" required>
                      </div>
      
                      <div class="mb-4">
                          <label class="block text-gray-700 text-sm font-bold mb-2" for="password" data-parsley-minlength="6" data-parsley-trigger="keyup">
                              Password
                          </label>
                          <input class="input input-bordered w-full" id="password" type="password" name="password" placeholder="Enter your password" required>
                      </div>
      
                      <div class="flex items-center justify-between">
                          <button class="btn btn-primary w-full" type="submit">
                              Create Account
                          </button>
                      </div>
                      <div class="flex w-full flex-col border-opacity-50">
                          <div class="divider">OR</div>
                        </div>
                      <div class="mt-6 text-center">
                         <a href="/login">Already have an account? Login</a>
                          
                      </div>
                  </form>
              </div>
          </div>
      </div>
      
</main>
<script>
     // Initialize Parsley validation
     $('#register-form').parsley();
 </script>
